{
  "env_name": "cheetah-vel",
  "env":{
    "randomize_tasks": true,
    "reward_scale": 5.0
  },
  "common":{
    "batch_size": 2,
    "z_inference_batch_size": 8,
    "use_next_obs_in_context": false,
    "num_train_tasks": 4,
    "num_test_tasks": 2
  },
  "replay_buffer":{
    "max_buffer_size": 1000
  },
  "encoder_buffer":{
    "max_buffer_size": 1000
  },
  "agent":{
    "gamma": 0.99,
    "update_target_network_interval": 1,
    "target_smoothing_tau": 0.005,
    "latent_dim": 5,
    "use_information_bottleneck": true,
    "kl_lambda": 0.1,
    "policy_mean_reg_weight": 1e-3,
    "policy_std_reg_weight": 1e-3,
    "policy_pre_activation_weight": 0.0,
    "q_network":{
      "hidden_dims": [20, 20],
      "optimizer_class": "Adam",
      "learning_rate":0.0003,
      "act_fn": "relu",
      "out_act_fn": "identity"
    },
    "v_network":{
      "hidden_dims": [20, 20],
      "optimizer_class": "Adam",
      "learning_rate":0.0003,
      "act_fn": "relu",
      "out_act_fn": "identity"
    },
    "policy_network":{
      "hidden_dims": [20, 20],
      "optimizer_class": "Adam",
      "deterministic": false,
      "learning_rate":0.0003,
      "act_fn": "relu",
      "out_act_fn": "identity",
      "re_parameterize": true
    },
    "context_encoder_network":{
      "hidden_dims": [20, 20],
      "optimizer_class": "Adam",
      "learning_rate":0.0003
    }
  },
  "trainer":{
    "max_iteration": 10,
    "num_tasks_per_gradient_update": 2,
    "num_train_tasks_per_iteration": 2, 
    "num_steps_prior": 400, 
    "num_steps_posterior": 0, 
    "num_extra_rl_steps_posterior": 400,
    "num_updates_per_iteration":10,
    "num_evaluations": 2,
    "num_steps_per_evaluation":10,
    "adaptation_context_update_interval": 1,
    "num_adaptation_trajectories_before_posterior_sampling": 1,
    "num_train_steps_per_iteration": 50,
    "max_trajectory_length":200,
    "test_interval": 1,
    "num_test_tasks": 5,
    "num_test_trajectories": 5,
    "save_model_interval": 2000,
    "start_timestep": 400,
    "save_video_demo_interval": 2,
    "log_interval": 1
  }
}
