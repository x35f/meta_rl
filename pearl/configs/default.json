{
  "env_name": "cheetah-dir",
  "env":{
    "randomize_tasks": true
  },
  "common":{
    "use_next_obs_in_context": false,
    "num_train_tasks": 2,
    "num_eval_tasks": 2,
    "use_same_tasks_for_eval": false
  },
  "replay_buffer":{
    "max_buffer_size": 100000
  },
  "encoder_buffer":{
    "max_buffer_size": 100000
  },
  "agent":{
    "gamma": 0.99,
    "reward_scale": 5.0,
    "target_smoothing_tau": 0.005,
    "latent_dim": 5,
    "use_information_bottleneck": true,
    "kl_lambda": 0.1,
    "alpha": 0.2,
    "q_network":{
      "hidden_dims": [300,300, 300],
      "optimizer_class": "Adam",
      "learning_rate":0.0003,
      "act_fn": "relu",
      "out_act_fn": "identity"
    },
    "policy_network":{
      "hidden_dims": [300, 300, 300],
      "optimizer_class": "Adam",
      "deterministic": false,
      "learning_rate":0.0003,
      "act_fn": "relu",
      "out_act_fn": "identity",
      "re_parameterize": true,
      "stablize_log_prob": true
    },
    "context_encoder_network":{
      "hidden_dims": [200, 200, 200],
      "optimizer_class": "Adam",
      "learning_rate":0.0003,
      "act_fn": "relu",
      "out_act_fn": "identity"
    },
    "entropy":{
      "automatic_tuning": true,
      "learning_rate": 0.0003,
      "optimizer_class": "Adam"
    }
  },
  "trainer":{
    "batch_size": 256,
    "z_inference_batch_size": 64,
    "max_epoch": 1000,
    "num_tasks_per_gradient_update": 16,
    "num_train_tasks_to_sample_per_iteration": 5, 
    "num_steps_prior": 400, 
    "num_steps_posterior": 0, 
    "num_extra_rl_steps_posterior": 400,
    "num_updates_per_iteration":2000,
    "adaptation_context_update_interval": 1,
    "num_eval_posterior_trajs": 1,
    "max_trajectory_length":200,
    "eval_interval": 10,
    "num_eval_trajectories": 5,
    "num_eval_rounds": 2, 
    "snapshot_interval": 10,
    "start_timestep": 2000,
    "save_video_demo_interval": -1,
    "log_interval": 1
  }
}